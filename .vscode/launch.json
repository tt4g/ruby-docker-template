{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Local File",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceFolder}/main.rb",
            "cwd": "${workspaceFolder}",
            "useBundler": true,
        },
        {
            "name": "RSpec - all",
            "type": "Ruby",
            "request": "launch",
            "program": "bin/rspec", // `bin/rspec` generated by `bundle binstubs rspec-core`
            "args": [
                "-I",
                "${workspaceFolder}"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true
        },
        {
            "name": "RSpec - active spec file only",
            "type": "Ruby",
            "request": "launch",
            "program": "bin/rspec", // `bin/rspec` generated by `bundle binstubs rspec-core`
            "args": [
                "-I",
                "${workspaceFolder}",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true
        }
    ]
}
